{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom", "esnext"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@abstract/*": ["apps/api/src/abstract/*"],
      "@lets-choose/api-health-feature": [
        "libs/api/health/feature/src/index.ts"
      ],
      "@lets-choose/api/auth/feature": ["libs/api/auth/feature/src/index.ts"],
      "@lets-choose/api/common/services": [
        "libs/api/common/services/src/index.ts"
      ],
      "@lets-choose/api/contest/data-access": [
        "libs/api/contest/data-access/src/index.ts"
      ],
      "@lets-choose/api/game/data-access": [
        "libs/api/game/data-access/src/index.ts"
      ],
      "@lets-choose/api/user/data-access": [
        "libs/api/user/data-access/src/index.ts"
      ],
      "@lets-choose/client/api": ["libs/client/api/src/index.ts"],
      "@lets-choose/client/components": ["libs/client/components/src/index.ts"],
      "@lets-choose/client/hooks": ["libs/client/hooks/src/index.ts"],
      "@lets-choose/client/pages": ["libs/client/pages/src/index.ts"],
      "@lets-choose/client/utils": ["libs/client/utils/src/index.ts"],
      "@lets-choose/common/dto": ["libs/common/dto/src/index.ts"],
      "@lets-choose/common/utils": ["libs/common/utils/src/index.ts"],
      "@modules/*": ["apps/api/src/modules/*"],
      "@pipes/*": ["apps/api/src/pipes/*"],
      "@src/*": ["apps/api/src/*"],
      "@test/*": ["apps/api/test/*"],
      "@usecases/*": ["apps/api/src/usecases/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
