    "@nestjs/config": "^0.6.1",
    "@nestjs/core": "^7.6.4",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/mongoose": "^7.2.0",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.5.1",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.23.0",
    "lodash": "^4.17.20",
    "md5": "^2.3.0",
