{
  "extends": "../../tsconfig.packages.json",
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDir": "./",
    "incremental": true,
    "typeRoots" : ["./node_modules/@types", "./typings"]
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "references": [
    { "path": "../common" }
  ]
}
