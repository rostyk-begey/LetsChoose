{
  "extends": "../../tsconfig.packages.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "*": ["node_modules/*"],
      "app/*": ["src/*"]
    }
  },
  "include": ["./src/**/*"],
  "references": [
    { "path": "../common/tsconfig.json" }
  ]
}
